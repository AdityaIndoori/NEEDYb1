<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aditya.menuview">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmergencyLoginActivity"
            android:label="@string/title_activity_emergency_login"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aditya.menuview.MainActivity" />
        </activity>
        <activity
            android:name=".EmergencyMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".H_MartMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aditya.menuview.MainActivity" />
        </activity>
        <activity
            android:name=".H_MartProductSelection"
            android:label="@string/title_activity_h_mart_product_selection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aditya.menuview.H_MartMainActivity" />
        </activity>
        <activity
            android:name=".H_MartCartActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aditya.menuview.H_MartProductSelection" />
        </activity>
        <activity
            android:name=".H_MartDeliveryOptions"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aditya.menuview.H_MartCartActivity" />
        </activity>
        <activity
            android:name=".H_MartPaymentOptions"
        android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aditya.menuview.H_MartDeliveryOptions" />
        </activity>
        <activity
            android:name=".WOR_MainActivity"
            android:label="@string/title_activity_wor__main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>